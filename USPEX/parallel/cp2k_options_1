&GLOBAL
  PROJECT USPEX
  PRINT_LEVEL MEDIUM
  RUN_TYPE CELL_OPT
&END GLOBAL
&MOTION
  &CELL_OPT
    TYPE DIRECT_CELL_OPT
    @INCLUDE 'pressure.uspex'
    PRESSURE_TOLERANCE 100.0
    MAX_DR    1.0E-03
    MAX_FORCE 1.0E-03
    RMS_DR    1.0E-03    
    RMS_FORCE 1.0E-03
    MAX_ITER 200
  &END
  &PRINT
    &TRAJECTORY
      LOG_PRINT_KEY .TRUE.
      FORMAT XYZ
      &EACH
         CELL_OPT 1
      &END EACH
    &END TRAJECTORY
    &CELL
     &EACH 
       CELL_OPT 1
     &END EACH
    &END CELL
    &RESTART OFF
    &END
    &RESTART_HISTORY OFF
    &END
  &END PRINT
&END MOTION  
&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &PRINT
    &STRESS_TENSOR
      ADD_LAST NUMERIC
    &END STRESS_TENSOR
    &FORCES
      &EACH
         CELL_OPT 1
      &END EACH
    &END FORCES
    &GRID_INFORMATION off
    &END GRID_INFORMATION
  &END PRINT
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    CHARGE 0
    MULTIPLICITY 1
    &MGRID
      CUTOFF 600
      REL_CUTOFF 60
      NGRIDS 5
    &END MGRID
    &KPOINTS
      SCHEME MONKHORST-PACK 3 3 3
    &END KPOINTS
    &QS
      METHOD GPW
    &END QS
    &POISSON
      PERIODIC XYZ
    &END
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF 200
     &MIXING
       METHOD BROYDEN_MIXING
     &END MIXING
     &PRINT
       &RESTART OFF
       &END
     &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
       &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD2
            !PARAMETER_FILE_NAME dftd3.dat
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF [angstrom] 15.0
         &END
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-NLCC-PBE-q4
    &END KIND
  @include 'subsys.uspex'
  &END SUBSYS
&END FORCE_EVAL
