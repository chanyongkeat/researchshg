&GLOBAL
  PROJECT NBBFC
  PRINT_LEVEL LOW
  RUN_TYPE MD
  PREFERRED_DIAG_LIBRARY SL
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE                      NVT
    STEPS                         10000
    TIMESTEP                      0.5             
    TEMPERATURE                   300
    &THERMOSTAT
      TYPE  NOSE
      REGION  GLOBAL
      &NOSE
        MTS  2
        LENGTH  3
        TIMECON  100
      &END NOSE
    &END THERMOSTAT
  &END MD
  &PRINT
     &TRAJECTORY  
       FORMAT  XMOL
       &EACH
         MD  1
       &END EACH
     &END TRAJECTORY
     &CELL
       &EACH
         MD  1
       &END EACH
     &END CELL
     &FORCES
       &EACH
         MD  1
       &END EACH
     &END FORCES
     &STRESS
       &EACH
         MD  1
       &END EACH
     &END STRESS
     &VELOCITIES
       &EACH
         MD  1
       &END EACH
     &END VELOCITIES
     &RESTART_HISTORY  SILENT
       &EACH
         MD  1000
       &END EACH
     &END RESTART_HISTORY
   &END PRINT
&END MOTION


