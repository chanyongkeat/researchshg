    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  POTENTIAL
    &POISSON
      PERIODIC XYZ #Direction(s) of PBC for calculating electrostatics
      PSOLVER PERIODIC #The way to solve Poisson equation
    &END POISSON
    &XC
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          CALCULATE_C9_TERM .TRUE.
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_C9_TERM .TRUE.
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF 16
          TYPE DFTD3(BJ)
          VERBOSE_OUTPUT T
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &MGRID
      CUTOFF 600
      REL_CUTOFF 60
      NGRIDS 5
    &END MGRID
    &SCF
       MAX_SCF 20
       EPS_SCF 1e-06
       SCF_GUESS RESTART
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_KINETIC
      &END OT
      &OUTER_SCF
       EPS_SCF  1E-06
       MAX_SCF  20
      &END OUTER_SCF
    &END SCF
  &END DFT
&END FORCE_EVAL
