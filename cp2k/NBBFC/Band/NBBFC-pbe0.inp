&GLOBAL  
  PROJECT NBBFC-pbe0   
  RUN_TYPE ENERGY  
&END GLOBAL
&FORCE_EVAL   
  &DFT  
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME POTENTIAL_UZH
    BASIS_SET_FILE_NAME BASIS_ADMM_UZH
    SORT_BASIS EXP  
    AUTO_BASIS RI_HFX MEDIUM  
    !restarting from a converged PBE calculation lead to less SCF steps  
    WFN_RESTART_FILE_NAME NBBFC-pbe-RESTART.kp  
  
    !Turning on the ADMM approximation  
    &AUXILIARY_DENSITY_MATRIX_METHOD  
      ADMM_TYPE ADMMS  
    &END AUXILIARY_DENSITY_MATRIX_METHOD  
  
    &QS
      !sometimes necessary when running small systems with a lot of CPUs
      PW_GRID_BLOCKED FALSE  
      METHOD GPW  
      !needs to be the same value as that in RI%EPS_PGF_ORB  
      EPS_PGF_ORB 1.0E-6  
    &END  QS
  
    &MGRID  
      CUTOFF 600  
      REL_CUTOFF 60  
      NGRIDS 5  
    &END MGRID  
  
    &SCF  
      EPS_SCF 1.0E-06  
      MAX_SCF 200
      !typically need lower threshold to start DIIS with k-points  
      EPS_DIIS 0.05  
      SCF_GUESS RESTART
      ADDED_MOS 50
    &END SCF  
  
    &XC  
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          CALCULATE_C9_TERM .TRUE.
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_C9_TERM .TRUE.
          REFERENCE_FUNCTIONAL PBE0
          R_CUTOFF 16
          TYPE DFTD3(BJ)
          VERBOSE_OUTPUT T
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL  
        &PBE  
          SCALE_X 0.75  
        &END  
      &END XC_FUNCTIONAL  
      &HF  
        FRACTION 0.25  
        &RI  
          KP_NGROUPS 15  
          !using a smaller than default EPS_PGF_ORB allows for a  
          !more accurate calculation with a larger local RI basis  
          EPS_PGF_ORB 1.0E-6  
        &END RI  
        &INTERACTION_POTENTIAL  
          !Always use a limited ranged potential in PBCs  
          POTENTIAL_TYPE TRUNCATED  
          CUTOFF_RADIUS 6.0  
        &END INTERACTION_POTENTIAL
      &END HF
    &END XC  
    &KPOINTS  
      SCHEME MONKHORST-PACK 8 8 2  
    &END KPOINTS
    &PRINT  
      &BAND_STRUCTURE  
        ADDED_MOS 50  
        &KPOINT_SET  
          NPOINTS 50  
          SPECIAL_POINT GAMMA 0.0000000000 0.0000000000 0.0000000000  
          SPECIAL_POINT M 0.5000000000 0.0000000000 0.0000000000  
          SPECIAL_POINT K 0.3333333333 0.3333333333 0.0000000000  
          SPECIAL_POINT GAMMA 0.0000000000 0.0000000000 0.0000000000  
        &END  KPOINT_SET
        FILE_NAME graphene_kp.bs  
      &END BAND_STRUCTURE 
    &END PRINT
  &END DFT  
