&GLOBAL
  PROJECT NBBFC
  RUN_TYPE GEO_OPT
  PRINT_LEVEL MEDIUM
  PREFERRED_DIAG_LIBRARY SL
&END GLOBAL

&MOTION
  &GEO_OPT
    MAX_ITER 3000
    OPTIMIZER BFGS
    MAX_DR    1.0E-03       
    MAX_FORCE 1.0E-04
    RMS_DR    1.0E-03
    RMS_FORCE 1.0E-04
    SPGR_PRINT_ATOMS .TRUE.
    KEEP_SPACE_GROUP .TRUE.
    EPS_SYMMETRY 1.0E-05
  &END GEO_OPT
&END MOTION


&FORCE_EVAL
  METHOD Quickstep              ! Electronic structure method (DFT,...)
  &DFT
    BASIS_SET_FILE_NAME  BASIS_MOLOPT
    POTENTIAL_FILE_NAME  POTENTIAL
    CHARGE    0 #Net charge
    MULTIPLICITY    1 #Spin multiplicity

    &POISSON                    ! Solver requested for non periodic calculations
      PERIODIC XYZ
      PSOLVER  PERIODIC         ! Type of solver
    &END POISSON
    &SCF
      MAX_SCF 250
      EPS_SCF 1.0E-06 #Convergence threshold of density matrix of inner SCF
#     SCF_GUESS RESTART #Use wavefunction from WFN_RESTART_FILE_NAME file as initial guess
      &DIAGONALIZATION
        ALGORITHM STANDARD #Algorithm for diagonalization
      &END DIAGONALIZATION
      &MIXING #How to mix old and new density matrices
        METHOD BROYDEN_MIXING #PULAY_MIXING is also a good alternative
        ALPHA 0.4 #Default. Mixing 40% of new density matrix with the old one
        NBROYDEN 8 #Default is 4. Number of previous steps stored for the actual mixing scheme
      &END MIXING
      &PRINT
        &RESTART #Note: Use "&RESTART OFF" can prevent generating .wfn file
          BACKUP_COPIES 0 #Maximum number of backup copies of wfn file. 0 means never
        &END RESTART
      &END PRINT
    &END SCF
    &XC
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          CALCULATE_C9_TERM .TRUE.
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_C9_TERM .TRUE.
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF 16
          TYPE DFTD3(BJ)
          VERBOSE_OUTPUT T
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &MGRID
      CUTOFF 600
      REL_CUTOFF 60
      NGRIDS 5
    &END MGRID
    &KPOINTS
      SCHEME MONKHORST-PACK 8 8 2
    &END KPOINTS
    &QS
      METHOD GPW
      EXTRAPOLATION USE_PREV_P
      EPS_DEFAULT 1.0E-12
    &END QS
  &END DFT

  &SUBSYS
    &KIND N
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND B
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q3
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Be
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND F
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND
    &KIND Cl
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND
  @include 'coord.in'
  &END SUBSYS
&END FORCE_EVAL
