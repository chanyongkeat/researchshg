&GLOBAL
  PROJECT NBBFC-opt
  PRINT_LEVEL MEDIUM
  PREFERRED_DIAG_LIBRARY SL
  RUN_TYPE CELL_OPT
&END GLOBAL
&MOTION
  &CELL_OPT
    TYPE DIRECT_CELL_OPT
    EXTERNAL_PRESSURE 1.01325 0 0 0 1.01325 0 0 0 1.01325       # atomspheric pressure
    MAX_DR    1.0E-03       
    MAX_FORCE 1.0E-04
    RMS_DR    1.0E-03
    RMS_FORCE 1.0E-04
    MAX_ITER 1000
    OPTIMIZER BFGS
    KEEP_SYMMETRY .TRUE.
    KEEP_SPACE_GROUP .TRUE.
    EPS_SYMMETRY 1.0E-05
  &END
  &PRINT
    &TRAJECTORY
      LOG_PRINT_KEY .TRUE.
      FORMAT XYZ
      &EACH
         CELL_OPT 1
      &END EACH
    &END TRAJECTORY
    &CELL
     &EACH 
       CELL_OPT 1
     &END EACH
    &END CELL
    &RESTART OFF
    &END
    &RESTART_HISTORY OFF
    &END
  &END PRINT
&END MOTION  
&FORCE_EVAL
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL
  &PRINT
    &STRESS_TENSOR
      ADD_LAST NUMERIC
    &END STRESS_TENSOR
    &FORCES
      &EACH
         CELL_OPT 1
      &END EACH
    &END FORCES
    &GRID_INFORMATION off
    &END GRID_INFORMATION
  &END PRINT
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    CHARGE 0
    MULTIPLICITY 1
    &MGRID
      CUTOFF 600
      REL_CUTOFF 60
      NGRIDS 5
    &END MGRID
    &KPOINTS
      SCHEME MONKHORST-PACK 9 9 1
    &END KPOINTS
    &QS
      METHOD GPW
    &END QS
    &POISSON
      PERIODIC XYZ
    &END
    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      MAX_SCF 500
      CHOLESKY OFF
     &MIXING
       METHOD BROYDEN_MIXING
     &END MIXING
     &PRINT
       &RESTART OFF
       &END
     &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL PAIR_POTENTIAL
        &PAIR_POTENTIAL
          CALCULATE_C9_TERM .TRUE.
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_C9_TERM .TRUE.
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF 16
          TYPE DFTD3(BJ)
          VERBOSE_OUTPUT T
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &KIND N
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND B
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q3
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Be
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND F
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND
    &KIND Cl
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND
  @include 'coord.in'
  &END SUBSYS
&END FORCE_EVAL
