&FORCE_EVAL
   METHOD QUICKSTEP
   &PRINT
      &FORCES
         FILENAME forces
      &END FORCES
   &END PRINT
   &SUBSYS
      &KIND Si
         ELEMENT Si
         BASIS_SET DZVP-MOLOPT-GTH
         POTENTIAL GTH-PBE
      &END KIND
   @INCLUDE 'coord.in'
   &END SUBSYS
   &DFT
      BASIS_SET_FILE_NAME BASIS_MOLOPT
      POTENTIAL_FILE_NAME POTENTIAL
      &XC
         &XC_FUNCTIONAL PBE
         &END XC_FUNCTIONAL
      &END XC
      &SCF
         SCF_GUESS ATOMIC
         MAX_SCF 300
         ADDED_MOS 100
         &MIXING
            METHOD BROYDEN_MIXING
            ALPHA 0.2
            BETA 1.5
            NBUFFER 8
         &END MIXING
         &SMEAR .TRUE.
            METHOD FERMI_DIRAC
            ELECTRONIC_TEMPERATURE 300.0
         &END SMEAR
         &DIAGONALIZATION
            ALGORITHM STANDARD
            EPS_ADAPT 0.01
         &END DIAGONALIZATION
      &END SCF
      &POISSON
         PERIODIC XYZ
      &END POISSON
   &END DFT
&END FORCE_EVAL
&GLOBAL
   PROJECT_NAME Si-phono3
   RUN_TYPE ENERGY_FORCE
   PRINT_LEVEL MEDIUM
&END GLOBAL
